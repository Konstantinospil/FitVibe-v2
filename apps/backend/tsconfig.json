{
    "extends":  "../../tsconfig.json",
    "compilerOptions":  {
                            "target":  "ES2022",
                            "module":  "commonjs",
                            "rootDir":  "src",
                            "outDir":  "dist",
                            "strict":  true,
                            "esModuleInterop":  true,
                            "skipLibCheck":  true,
                            "resolveJsonModule":  true,
                            "types":  [
                                          "node",
                                          "jest"
                                      ]
                        },
    "include":  [
                    "src/*.ts",
                    "src/config/**/*.ts",
                    "src/db/**/*.ts",
                    "src/middlewares/**/*.ts",
                    "src/observability/**/*.ts",
                    "src/routes/**/*.ts",
                    "src/services/**/*.ts",
                    "src/utils/**/*.ts",
                    "src/modules/auth/**/*.ts"
                ]
}
